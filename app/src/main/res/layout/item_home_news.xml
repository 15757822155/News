<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_home_news_icon"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:transitionName="news"
        android:layout_margin="5dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_home_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_home_news_icon"
        android:layout_toEndOf="@id/iv_home_news_icon"
        android:maxLines="2"
        android:text="啦啦啦啦啦啦啦啦啦sdfafdasfasfsdfa"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_home_news_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_home_news_icon"
        android:layout_toEndOf="@id/iv_home_news_icon"
        android:text="啦啦啦啦啦啦啦啦啦"
        android:textSize="17sp" />
</RelativeLayout>
